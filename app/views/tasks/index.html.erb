<div class="container">
  <h1>TASKS LIST</h1>

  <%= button_to "Create Task", new_task_path, method: :get, class: 'btn btn-danger' %>
  <div class="row">
  	<div class="col-lg-4 col-sm-12">
  		<h3>Backlog Tasks</h3>
  		<ul>
  		<% @backlog_tasks.each do |task| %>
  			<li><%= link_to task.name, task_path(task) %></li>
  		<% end %>
  		</ul>
  	</div>
  	<div class="col-lg-4 col-sm-12">
      <h3>Pending Tasks</h3>
      <ul>
      <% @pending_tasks.each do |task| %>
      	<li><%= link_to task.name, task_path(task) %></li>
      <% end %>
      </ul>
    </div>
    <div class="col-lg-4 col-sm-12">
      <h3>Completed Tasks</h3>
      <ul>
      <% @completed_tasks.each do |task| %>
      	<li><%= link_to task.name, task_path(task) %></li>
      <% end %>
      </ul>
    </div>
  </div>
</div>

